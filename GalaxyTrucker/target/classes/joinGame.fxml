<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="20"
      prefWidth="320"
      prefHeight="189"
      style="-fx-background-color: #e6ddbc;">

    <Button fx:id="lobbyButton"
            onAction="#setOne"
            text="Create Game"
            prefWidth="200"
            prefHeight="40"
            style="-fx-background-color: #5F3075;" textFill="WHITE">
        <font>
            <Font name="Bodoni 72 Smallcaps Book" size="18.0" />
        </font>
    </Button>

    <Button fx:id="joinButton"
            onAction="#setTwo"
            text="Join a Lobby"
            prefWidth="200"
            prefHeight="40"
            style="-fx-background-color: #5F3075;" textFill="WHITE">
        <font>
            <Font name="Bodoni 72 Smallcaps Book" size="18.0" />
        </font>
    </Button>

</VBox>
