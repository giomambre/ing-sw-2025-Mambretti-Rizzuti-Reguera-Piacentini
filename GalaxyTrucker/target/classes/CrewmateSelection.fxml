<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox minWidth="410.0" prefHeight="420.0" prefWidth="411.0" style="-fx-background-color: lightyellow;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.GUI.CrewmateSelectionController">
    <children>
        <VBox alignment="CENTER" spacing="30.0" style="-fx-padding: 30;">
            <children>
                <Label fx:id="cardInfoLabel" style="-fx-padding: 15; -fx-font-family: verdana; -fx-text-fill: #696969;" text="Seleziona il crewmate per questa Living Unit:" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <!-- Buttons Container -->
                <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20 0 0 0;">
                    <children>
                        <Button fx:id="astronautButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #4A90E2; -fx-text-fill: #BFEFFF; -fx-font-weight: bold; -fx-background-radius: 10;" text="Astronaut"
                                >
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>
                        <Button fx:id="pinkAlienButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #E24A90; -fx-text-fill: #FFD1DC; -fx-font-weight: bold; -fx-background-radius: 10;" text="Pink Alien"
                                >
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <Button fx:id="brownAlienButton" mnemonicParsing="false" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #8B4513; -fx-text-fill: #BC987E; -fx-font-weight: bold; -fx-background-radius: 10;" text="Brown Alien"
                            >
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</VBox>
