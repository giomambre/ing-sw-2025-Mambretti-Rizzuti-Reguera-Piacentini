<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@NumPlayers.css" />
   </stylesheets>
   <children>
      <ImageView>
         <image>
            <Image url="@images/backgrounds/bgNumPlayerScreen.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" spacing="30.0">
         <children>
            <ImageView fitHeight="189.0" fitWidth="352.0" preserveRatio="true">
               <image>
                  <Image url="@images/backgrounds/logo.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="100.0" top="-200.0" />
               </VBox.margin>
            </ImageView>
            <Label style="-fx-font-family: 'Verdana'; -fx-font-weight: bold; -fx-font-size: 28px; -fx-text-fill: #fef6d5;" text="Scegli il numero di giocatori:" />
            <Spinner fx:id="playerNumberSpinner" styleClass="spinner" prefHeight="40.0" prefWidth="184.0" style="-fx-background-color: #fef6d5;" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <Button fx:id="goBack" onAction="#setOne" prefHeight="53.0" prefWidth="161.0" text="Indietro" />
                  <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#setPlayerNumber" text="Continua" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
