<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

   <stylesheets>
      <URL value="@ChooseLobby.css" />
   </stylesheets>

   <children>
      <ImageView>
         <image>
            <Image url="@images/backgrounds/bgLobby.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" spacing="30.0">
         <children>
            <ImageView fitHeight="175.0" fitWidth="338.0" preserveRatio="true">
               <image>
                  <Image url="@images/backgrounds/logo.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin>
            </ImageView>

                      <Label style="-fx-font-family: 'Verdana';                       -fx-font-size: 28px;                       -fx-font-weight: bold;                       -fx-text-fill: #fef6d5;" text="Seleziona una lobby disponibile:">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Label>

                      <ListView fx:id="lobbyListView" prefHeight="279.0" prefWidth="536.0">
               <VBox.margin>
                  <Insets left="500.0" right="500.0" />
               </VBox.margin>
            </ListView>
            <Button onAction="#handleSelect" styleClass="lobby-button" text="Entra">
               <VBox.margin>
                  <Insets bottom="100.0" />
               </VBox.margin>
            </Button>

         </children>
         <padding>
            <Insets bottom="50.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
