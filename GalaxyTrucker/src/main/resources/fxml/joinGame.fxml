<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="900.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" styleClass="stack-pane">

    <stylesheets>
        <URL value="@JoinGame.css" />
    </stylesheets>

    <children>

        <VBox alignment="CENTER" spacing="30">
         <ImageView fitHeight="189.0" fitWidth="352.0" preserveRatio="true">
            <image>
               <Image url="@../images/backgrounds/logo.png" />
            </image>
            <VBox.margin>
               <Insets bottom="100.0" />
            </VBox.margin>
         </ImageView>
            <Label style="-fx-font-size: 28px; -fx-font-family: 'Verdana'; -fx-text-fill:  #fef6d5; -fx-font-weight: bold;" text="Inizia il tuo viaggio stellare:">
            <VBox.margin>
               <Insets />
            </VBox.margin></Label>
            <Button fx:id="lobbyButton" onAction="#setOne" prefHeight="72.0" prefWidth="231.0" style="-fx-text-fill: #fef6d5; -fx-font-size: 20px;" styleClass="button" text="Crea una lobby">
                    <graphic>
                        <ImageView fitHeight="35.0" fitWidth="34.0">
                            <image>
                                <Image url="@../images/icons/rocket.png" />
                            </image>
                        </ImageView>
                </graphic>
            </Button>
            <Button fx:id="joinButton" onAction="#setTwo" prefHeight="72.0" style="-fx-text-fill: #fef6d5; -fx-font-size: 20px;" styleClass="button" text="Entra in una lobby">
                <graphic>
                    <ImageView fitHeight="29.0" fitWidth="34.0">
                        <image>
                            <Image url="@../images/icons/door.png" />
                        </image>
                    </ImageView>
                </graphic>
            <VBox.margin>
               <Insets bottom="50.0" />
            </VBox.margin></Button>
        </VBox>

    </children>
</StackPane>
