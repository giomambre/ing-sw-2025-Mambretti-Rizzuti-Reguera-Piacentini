<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="870.0" minWidth="700.0" style="-fx-background-color: lightyellow;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.GUI.FlyghtController">
    <stylesheets>
        <URL value="@FlyghtBoard.css" />
    </stylesheets>
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox fx:id="playersInfoBox" alignment="CENTER" spacing="20.0">
                    <children>
                        <Label style="-fx-font-size: 15; -fx-font-family: 'Verdana'; -fx-text-fill: gray;" text="Info Giocatori" />
                        <Label fx:id="playerCreditsLabel" style="-fx-font-size: 15; -fx-font-weight: bold; -fx-font-family: 'Verdana'; -fx-text-fill: #DAA520;" text="Crediti: 0" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <GridPane fx:id="boardGrid" alignment="CENTER" hgap="2.0" vgap="2.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </GridPane>
    </center>

    <right>
        <VBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="adventureCardArea" spacing="10.0" style="-fx-background-color: #D8B7DD; -fx-border-color: #4B0149; -fx-border-width: 1px; -fx-padding: 10px;">
                    <children>
                        <Label style="-fx-font-size: 18; -fx-font-family: 'Verdana'; -fx-font-weight: bold; -fx-text-fill: #4B0149;" text="Carte Avventura" />
                    </children>
                </VBox>

                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label fx:id="dclabel" style="-fx-text-fill: #4B0149; -fx-font-family: verdana; -fx-font-size: 14;" text="Decidere se usare o no il cannone" visible="false">
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="choiceLabel" style="-fx-text-fill: grey; -fx-font-family: verdana; -fx-font-size: 14;" text="Vuoi usare questa carta avventura?" visible="false">
                            <VBox.margin>
                                <Insets top="-28.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="epidemicLabel" style="-fx-text-fill: grey; -fx-font-size: 14; -fx-font-family: verdana;" text="sono stati RIMOSSI 1 ASTRONAUTA per ogni Living Unit ADIACENTE" visible="false">
                            <VBox.margin>
                                <Insets top="-28.0" />
                            </VBox.margin>
                        </Label>
                        <Button fx:id="continueButton" text="Sì" visible="false" />
                        <Label fx:id="infoLabel" style="-fx-text-fill: #4B0149; -fx-font-family: verdana; -fx-font-size: 14;" text="Decidere se usare o no il cannone" visible="false">
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </Label>
                        <HBox>
                            <children>
                                <Button fx:id="accept" styleClass="player-button" text="Sì" visible="false"  />
                                <Button fx:id="reject" styleClass="player-button" text="No" visible="false" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="yesdc" styleClass="player-button" text="Sì" visible="false" />
                                <Button fx:id="nodc" styleClass="player-button" text="No" visible="false" />
                            </children>
                            <VBox.margin>
                                <Insets top="-30.0" />
                            </VBox.margin>
                        </HBox>
                        <Button fx:id="dontusebattery" styleClass="player-button" text="Non usare nessuna batteria" visible="false">
                            <VBox.margin>
                                <Insets top="-50.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
            <children>

                <VBox maxWidth="450.0" spacing="15.0">
                    <Label style="-fx-font-family: 'Verdana'; -fx-font-size: 16; -fx-text-fill: #4B0149;" text="Navi degli altri:" />
                    <VBox fx:id="playersButtonBox" spacing="15.0" />
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 18; -fx-font-family: 'Verdana'; -fx-font-weight: bold; -fx-text-fill: #4B0149;" text="La tua Nave" />
                        <StackPane alignment="CENTER">
                            <ImageView fitHeight="422.5" fitWidth="581.25" preserveRatio="false">
                                <image>
                                    <Image url="@/images/backgrounds/bgShipBoard.jpg" />
                                </image>
                            </ImageView>
                            <GridPane fx:id="playerShipGrid" alignment="CENTER" hgap="1.0" style="-fx-border-color: transparent; -fx-padding: 10px;" vgap="1.0" />
                        </StackPane>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <BorderPane.margin>
                <Insets bottom="20.0" top="-10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>